package main

import (
	"fmt"
	"strings"
)

func main() {
	var x, padr達o string
	fmt.Print("Digite uma string:")
	fmt.Scan(&x)
	fmt.Print("Digite um padr達o:")
	fmt.Scan(&padr達o)

	var indexes []int

	for i := len(x) - 1; i >= 0; i-- {
		idx := strings.Index(x[i:], padr達o)
		fmt.Println(i, idx)
		if idx != -1 {
			indexes = append(indexes, i+idx)

		}
	}
	fmt.Println(indexes)
}
